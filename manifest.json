{
  "manifest_version": 2,
  "name": "BomBot.vn",
  "version": "1.0.0",
  "description": "Ứng dụng gửi tin nhắn hàng loạt",
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "logo.png"
  },
  "permissions": [
    "tabs",
    "windows",
    "https://*/",
    "notifications",
    "background",
    "storage",
    "webRequest"
  ],
  "content_security_policy": "script-src 'self' https://unpkg.com 'unsafe-eval' https://connect.facebook.net; object-src 'self'",
  "background": {
    "scripts": [
      "background.js",
      "backgroundApi.js"
    ],
    "persistent": true
  }
}